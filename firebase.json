{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "cathywest",
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "gmail_api_handler"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [{"source": "**", "headers": [{"key": "Cross-Origin-Opener-Policy", "value": "same-origin-allow-popups"}]}]
    },
    {
      "target": "2080",
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "gmail_api_handler"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [{"source": "**", "headers": [{"key": "Cross-Origin-Opener-Policy", "value": "same-origin-allow-popups"}]}]
    }
  ],
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "python311",
      "ignore": ["venv", ".git", "**/__pycache__/**"]
    }
  ]
}
